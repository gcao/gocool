= form_tag uploads_url, :name=>"upload_file_form", :id => "upload_file_form", :multipart => true, :class => "upload_game" do
  %fieldset
    .row
      .span4
        %label(for="upload_description")= t('uploads.description_label')
      .span8
        %input#upload_description(type="text" name="upload_description" size="80")
        %p= t('uploads.description_note')

    .row
      .span4
        %label(for="upload_upload")
          = t('uploads.file_label')
          =raw mark_required
          %br
          =raw t('uploads.file_note')
      .span8
        #file_fields
          #upload_upload0
            %input#upload_upload(type="file" name="upload[upload]" size="60")
            %input.btn.btn-danger(type="button" value="Delete This" onclick="removeUploadField('upload_upload0')")
        %p=raw t('uploads.zip_file_note')

    .row.buttons
      .offset4
        %input(type='hidden' name='upload_type' value='file')
        =submit_tag t('uploads.submit_button'), :class => "upload_submit btn btn-primary"
        =button_tag t('form.reset_button'), :name => "reset", :class => "btn"

- content_for :footer do
  :javascript
    validanguage.el.upload_upload = {
      required: true,
      errorMsg: "#{t('uploads.file_required')}"
    };
