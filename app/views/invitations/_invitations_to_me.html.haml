- if @invitations_to_me.blank?
  = t('invitations.none')
- else
  .active-scaffold.blue-theme
    %table
      %thead
        %tr.header
          %th.created_at_column= t('invitations.created_at_label')
          %th.state_column=     t('invitations.state_label')
          %th.game_type_column= t('invitations.game_type_label')
          %th.inviter_column=    t('invitations.inviter_label')
          %th.start_side_column= t('invitations.start_side_label')
          %th.handicap_column= t('invitations.handicap_label')
          %th.note_column=       t('invitations.note_label')
          %th.actions_column     &nbsp;
      %tbody.records
        = render :partial => 'invitations/invitation_to_me', :collection => @invitations_to_me, :as => :invitation
