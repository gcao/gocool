%h1= @page_header || t('player.page_header')

-form_remote_tag :url => '/online_players/search', :update => 'players_result', :method => :get, :html => {:class => 'bp'} do
  .form_row.span-18
    %span
      %label(for="player_platform")
        = t('player.platform_label')
    %span
      =gaming_platforms_select 'platform'
    %span
      &nbsp;&nbsp;&nbsp;&nbsp;
      %label(for="player_username")
        = t('player.username_label')
    %span
      =text_field_tag 'username'
    %span
      =submit_tag t('form.submit_button')
      
%hr.space
#players_result_container.span-18.active-scaffold.blue-theme
  #players_result

- content_for :footer do      
  = javascript_include_tag "validanguage_uncompressed"
  :javascript
    validanguage.el.username = {
      validations: [
        {
          name: validanguage.validateRequired,
          errorMsg: "#{t('player.search.username_invalid')}",
        },
        {
          name: validanguage.validateMinLength,
          minLength: 2,
          errorMsg: "#{t('player.search.username_invalid')}"
        }
      ]
    };