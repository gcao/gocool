= form_tag uploads_url, :name => "upload_sgf_form", :id => "upload_sgf_form", :class => "upload_game" do
  %fieldset
    .row
      .span4
        %label(for="upload_description3")= t('uploads.description_label')
      .span8
        %input#upload_description3(type="text" name="upload_description" size="80")

    .row
      .span4
        %label(for='data')
          = t('uploads.data_label')
          =raw mark_required
      .span8
        %textarea#upload_data{:name => "upload[data]", :cols => 120, :rows => 20}

    .row
      .offset4
        %input(type='hidden' name='upload_type' value='sgf')
        =submit_tag t('uploads.submit_button'), :class => "upload_submit btn btn-primary"
        =button_tag t('form.reset_button'), :name => "reset", :class => "btn"

- content_for :footer do
  :javascript
    validanguage.el.upload_data = {
      required: true,
      errorMsg: "#{t('uploads.data_required')}"
    };
