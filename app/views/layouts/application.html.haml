-# This file is not in use
!!! transitional
%html
  %head
    %meta(http-equiv="content-type" content="text/html;charset=UTF-8")
    %title= @page_title

    = stylesheet_link_tag "active_scaffold/default/stylesheet.css"
    /[if IE]
      = stylesheet_link_tag "active_scaffold/default/stylesheet-ie.css"
    
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'

    = yield :head
  %body.bp.three-col
    #container
      = render "layouts/menu_body"
      %hr.space
      = yield

      = include_jquery
      :javascript
        var gocool_locale = "#{@locale}";
        arrowimages.down[1]="/images/down.gif";
        arrowimages.right[1]="/images/right.gif";
        jQuery(document).ready(function(){
          jQuery('#myslidemenu .#{params[:controller]}').addClass('active');
          jQuery('#locale_#{I18n.locale}').addClass('active');
        });

      = javascript_include_tag "application"
      = yield :footer
