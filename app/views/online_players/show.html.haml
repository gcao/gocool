%h1= t('players.games_played_by').gsub('PLATFORM_NAME', @online_player.gaming_platform.name).gsub('PLAYER_NAME', @online_player.username)

#games.active-scaffold.blue-theme
  %table
    %thead
      %tr.header
        %th#game_name_column= t('shared.games_table.game_name')
        %th#black_player_column= t('shared.games_table.black_player')
        %th#white_player_column= t('shared.games_table.white_player')
        %th#moves_column= t('shared.games_table.moves')
        %th#result_column= t('shared.games_table.result')
        %th#play_time_column= t('shared.games_table.play_time')
        %th#create_time_column= t('shared.games_table.create_time')
        %th#actions_column &nbsp;
    %tbody.records
      = render :partial => 'game', :collection => @games

