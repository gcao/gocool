.row
  .span3
    %h2= t('invitations.page_header')
  %a(href="#{new_invitation_url}")
    = t('invitations.create_link_label')

#invitations_to_me_container.row{:style => 'display:none;'}
  .span12
    %h2= t('invitations.invitations_sent_to_me')
    %table.table
      %thead
        %tr.header
          %th.created_at_column= t('invitations.created_at_label')
          %th.state_column=     t('invitations.state_label')
          %th.game_type_column= t('invitations.game_type_label')
          %th.inviter_column=    t('invitations.inviter_label')
          %th.start_side_column= t('invitations.start_side_label')
          %th.handicap_column= t('invitations.handicap_label')
          %th.note_column=       t('invitations.note_label')
          %th.actions_column=    t('table.actions_label')
      %tbody.records

#invitations_by_me_container.row{:style => 'display:none;'}
  .span12
    %h2= t('invitations.invitations_sent_by_me')
    %table.table
      %thead
        %tr.header
          %th.created_at_column= t('invitations.created_at_label')
          %th.state_column=     t('invitations.state_label')
          %th.game_type_column= t('invitations.game_type_label')
          %th.invitees_column=    t('invitations.invitees_table_label')
          %th.start_side_column= t('invitations.start_side_label')
          %th.handicap_column= t('invitations.handicap_label')
          %th.note_column=       t('invitations.note_label')
          %th.actions_column=    t('table.actions_label')
      %tbody.records

:coffeescript
  loadInvitations()

