!!! transitional
%html
  %head
    %meta{"http-equiv" => "content-type", :content => "text/html;charset=UTF-8"}
    %title= "Upload Games"
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
  %body.bp.three-col
    #container
      %hr.space
      %h1 Upload Games
      -form_for :upload, :html => {:multipart => true, :class => 'bp'} do |form|
        .span-24
          .span-2
            = form.label :email, t('upload.email_label')
          .span-21.last
            = form.text_field :email, "maxlength" => 40
          %br
          .span-2
            = form.label :upload, t('upload.file_label')
          .span-21.last
            = form.file_field :upload
          %hr.space
          .span-2
            = form.submit t('upload.submit_button')
          .span-21.last
            = form.submit t('upload.reset_button')