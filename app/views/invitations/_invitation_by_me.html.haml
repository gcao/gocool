%tr{:id => "invitation_row_#{invitation.id}", :class => "record " + (invitation_by_me_counter%2 == 0 ? "even-record":"")}
  %td
    = invitation.created_at.strftime("%Y-%m-%d %I:%M%p")
  %td
    = invitation.state
  %td
    =h invitation.invitees_str
  %td
    = invitation.start_side_str
  %td
    =h invitation.response || invitation.note
  %td.actions
    %a(href="#{cancel_invitation_url(invitation)}")= t('invitations.cancel')
