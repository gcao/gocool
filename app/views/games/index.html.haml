%h1= @page_header || t('players.page_header')
    
-form_tag games_path, :method => :get, :class => 'bp' do
  .span-24
    = show_flash 'span-24'
    %table#games_search_form
      %tr
        %td
          %span
            %label(for="platform")
              = t('games.platform_label')
            =gaming_platforms_select 'platform', @platform
        %td
          %label(for="player1")
            %em.msg
              = t('games.player1_label')
          =text_field_tag 'player1', @player1
        %td
          %label(for="player2")
            = t('games.vs_label')
        %td
          %label(for="player2")
            %em.msg
              = t('games.player2_label')
          =text_field_tag 'player2', @player2
        %td
          %input{:type => "hidden", :name => "op", :value => "search"}
          =submit_tag t('form.search_button')
          %input{:type => "reset", :value => t('form.reset_button')}
      
      
#games_widget_container.span-24
  = render_games_widget @games

- content_for :footer do
  = javascript_include_tag "validanguage_uncompressed"
  :javascript
    validanguage.el.player1 = {
      validations: [
        {
          name: validanguage.validateRequired,
          errorMsg: "#{t('games.player1_required')}",
        }
      ]
    };
