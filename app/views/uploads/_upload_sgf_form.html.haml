%form.bp{:action=>uploads_url, :name=>"uploadSgfForm", :method=>"post"}
  %fieldset.span-18.no-border
    - if @upload_type == UploadsController::UPLOAD_SGF
      = show_flash 'span-18'

    .form_row.span-18
      .span-3
        %label(for="upload_description3")
          =t('uploads.description_label')
      .span-15.last
        %input#upload_description3(type="text" name="upload_description" size="80")

    .form_row.span-18
      .span-3
        %label(for='data')
          = t('uploads.data_label')
          = mark_required
      .span-15.last
        %textarea#upload_data{:name => "upload[data]", :cols => 120, :rows => 20}

    %hr.space
    .span-14{:align => 'center'}
      %input(type='hidden' name='upload_type' value='sgf')
      %input.upload_submit{:type => "submit", :name => "commit", :value => t('uploads.submit_button')}
      %input{:type => "reset", :value => t('form.reset_button')}

- content_for :footer do
  :javascript
    validanguage.el.upload_data = {
      required: true,
      errorMsg: "#{t('uploads.data_required')}"
    };
