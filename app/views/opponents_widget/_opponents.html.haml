%h2= t('players.opponents_header')

.opponents.span-24.active-scaffold.blue-theme
  .digg_pagination= will_paginate @opponents_for_widget, :previous_label => t('link.pagination.prev'), :next_label => t('link.pagination.next'), :param_name => 'opponents_page'
  %table
    %thead
      %tr.header
        %th.id_column=    "ID"
        %th.name_column=  t('players_table.opponent')
        %th.games_column= t('players_table.games')
        %th.won_column=   t('players_table.my_won')
        %th.lost_column=  t('players_table.my_lost')
        %th.actions_column &nbsp;
    %tbody.records
      = render :partial => 'opponents_widget/opponent', :collection => @opponents_for_widget

