!!! transitional
%html
  %head
    %meta(http-equiv="content-type" content="text/html;charset=UTF-8")
    %title= @page_title

    = stylesheet_link_tag 'compiled/discuz.css'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css'

    - if @admin_page
      = include_jquery
      - bundle :name => 'admin' do
        <script src="javascripts/prototype.js" type="text/javascript"></script>
        <script src="javascripts/effects.js" type="text/javascript"></script>
        <script src="javascripts/dragdrop.js" type="text/javascript"></script>
        <script src="javascripts/controls.js" type="text/javascript"></script>
        <script src="javascripts/active_scaffold/default/rico_container.js" type="text/javascript"></script>
        <script src="javascripts/active_scaffold/default/form_enhancements.js" type="text/javascript"></script>
        <script src="javascripts/active_scaffold/default/dhtml_history.js" type="text/javascript"></script>
        <script src="javascripts/active_scaffold/default/active_scaffold.js" type="text/javascript"></script>

    = yield :head
  %body.bp
    = render 'discuz/header'
    #container
      %hr.space

      = yield

      %hr.space
      #cursor
      = image_tag "arrow.gif", :id => "pointer", :alt => "", :width => 0, :height => 0

      #firefox_container(style="display:none")= t('shared.recommend_firefox')
    = render 'discuz/footer'

    :javascript
      var controller_name = "#{params[:controller]}";
    - unless @admin_page
      = include_jquery
      - bundle do
        <script src="javascripts/jqueryslidemenu.js" type="text/javascript"></script>
        <script src="javascripts/jquery.autocomplete.js" type="text/javascript"></script>
        <script src="javascripts/jquery.livequery.js" type="text/javascript"></script>
        <script src="javascripts/jquery.date_input.js" type="text/javascript"></script>
        <script src="javascripts/jquery.date_input.zh_CN.js" type="text/javascript"></script>
        <script src="javascripts/validanguage.js" type="text/javascript"></script>
        <script src="javascripts/tooltip.js" type="text/javascript"></script>
        <script src="javascripts/application.js" type="text/javascript"></script>
        <script src="javascripts/upload.js" type="text/javascript"></script>
    = yield :footer
