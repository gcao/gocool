%table#online_players_table
  %thead
    %tr.header
      %th#platform_column= t('player.online_players.platform')
      %th#username_column= t('player.online_players.username')
      %th#games_column= t('player.online_players.games')
      %th#won_column= t('player.online_players.won')
      %th#lost_column= t('player.online_players.lost')
      %th#actions_column &nbsp;
  %tbody.records
    = render :partial => 'online_player', :collection => @online_players, :as => :online_player
