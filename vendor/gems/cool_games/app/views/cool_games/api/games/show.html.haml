%h3

#actions{:style => 'display:none;'}

#gameContainer

:coffeescript
  $(document).ready ->
    id = "#{params[:id]}"
    url = gon.urls.api.games + "/" + id + ".json"
    url = addAuthToUrl(url)

    $.ajax url,
      dataType: 'jsonp'
      crossDomain: true
      success: (response) ->
        handleResponse response,
          before: -> console.log url
          callback: -> showGame(response.body, gon.user)

- content_for :footer do
  = render "cool_games/shared/jsgameviewer"
  = javascript_include_tag "cool_games/api/player"

