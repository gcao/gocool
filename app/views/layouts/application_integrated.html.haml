!!! transitional
%html
  %head
    %meta(http-equiv="content-type" content="text/html;charset=UTF-8")
    %title= @page_title

    = stylesheet_link_tag "active_scaffold/default/stylesheet.css"
    /[if IE]
      = stylesheet_link_tag "active_scaffold/default/stylesheet-ie.css"

    = stylesheet_link_tag 'compiled/discuz.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'

    = yield :head
  %body.bp
    = render 'discuz/header'
    #container
      %hr.space
      = yield

      - if RAILS_ENV == 'production'
        %script(src="http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js" type="text/javascript")
      - else
        =javascript_include_tag "jquery"
      :javascript
        var gocool_locale = "#{@locale}";
      = render "layouts/menu_js"
      = javascript_include_tag "application"
      = yield :footer

      %p &nbsp;
    = render 'discuz/footer'
