!!! transitional
%html
  %head
    %meta{"http-equiv" => "content-type", :content => "text/html;charset=UTF-8"}
    %title= "Games Database (Weiqi/Daoqi)"
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    %script{:src => "http://ajax.googleapis.com/ajax/libs/jquery/1.2.6/jquery.min.js", :type => "text/javascript"}
    %script{:src => "http://ajax.googleapis.com/ajax/libs/prototype/1.6.0.3/prototype.js", :type => "text/javascript"}
    %script{:src => "http://ajax.googleapis.com/ajax/libs/scriptaculous/1.8.2/scriptaculous.js", :type => "text/javascript"}
    = javascript_include_tag ["jrails", "application"]
    -#= active_scaffold_includes
    = render :partial => "layouts/menu_head"
    -#= calendar_date_select_includes "silver"
  %body
    .container.showgrid
      = render :partial => "layouts/menu_body"
      %br/
      - if flash[:message]
        #flashContainer= flash[:message]
      = yield
    