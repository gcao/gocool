%h2= t('games.page_title')

=form_tag search_api_games_path, :method => :get, :remote => true, |
          :id => 'games_search_form', :class => "horizontal" do |
  %fieldset
    .row
      .span12
        %label(for="platform")
          = t('games.platform_label')
        =gaming_platforms_select 'platform'
        &nbsp;&nbsp;&nbsp;&nbsp;
        =text_field_tag 'player1', h(@player1), :placeholder => t('games.player1_label')
        %label#vs_label(for="player2")
          = t('games.vs_label')
        =text_field_tag 'player2', h(@player2), :placeholder => t('games.player2_label')
        &nbsp;&nbsp;&nbsp;&nbsp;
        =submit_tag t('form.search_button'), :class => "btn btn-primary", :disable_with => t('form.please_wait')
        =button_tag t('form.reset_button'), :name => "reset", :class => "btn"

#games_not_found(style='display:none;')
  = t("games_widget.game_not_found")
#games_table(style='display:none;')
  .games_widget
    .pagination(style='display:none')
    %table.games_table.table
      %thead
        %tr.header
          %th.id_column=           "ID"
          %th.game_name_column=    t('games_widget.game_name')
          %th.black_player_column= t('games_widget.black_player')
          %th.white_player_column= t('games_widget.white_player')
          %th.handicap_column=     t('games_widget.handicap')
          %th.komi_column=         t('games_widget.komi')
          %th.moves_column=        t('games_widget.moves')
          %th.result_column=       t('games_widget.result')
          %th.play_time_column=    t('games_widget.play_time')
          %th.place_column=        t('games_widget.place')
          %th.upload_description_column=  t('games_widget.upload_description')
          %th.actions_column=      t('table.actions_label')
      %tbody.records

:coffeescript
  initApiGames('#{cool_games.api_games_url}')

