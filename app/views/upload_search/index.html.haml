- content_for :head do
  = stylesheet_link_tag "date_input.css"

%h1= @page_header || t('upload_search.page_header')

%a{:href => url_for_uploads_of_today}= t("upload_search.uploads_of_today")
&nbsp;&nbsp;
%a{:href => url_for_uploads_of_7_days}= t("upload_search.uploads_of_7_days")

- if search_by_date?
  = render :partial => "search_by_date"
  = render :partial => "search_by_description"
-else
  = render :partial => "search_by_description"
  = render :partial => "search_by_date"

%hr.space

- content_for :footer do
  :javascript
    jQuery(jQuery.date_input.initialize);
